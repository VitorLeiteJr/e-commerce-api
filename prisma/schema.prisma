generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  name     String
  password String
  Cart     Cart?   @relation(fields: [cartId], references: [id])
  cartId   String? @db.ObjectId
}

model products {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  description String
  name        String
  price       Int
  stock       Int
  Cart        Cart?   @relation(fields: [cartId], references: [id])
  cartId      String? @db.ObjectId
}

model Cart {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    User[]
  productId products[]
  quantity  Int
}
